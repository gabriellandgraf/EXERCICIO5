algoritmo "Média"


var
      nota1,nota2,media: real
inicio
      Escreva("Digite a disciplina 1: ")
      Leia (nota1)
      
      Escreva("Digite a disciplina 2: ")
      Leia (nota2)
      
      media<- (nota1+nota2)/2
      
      escreval ("Nota 1: ",nota1, " Nota2: ",nota2, " A media entre ",nota1, " e ",nota2, "é igual a",media, " . ")


fimalgoritmo
